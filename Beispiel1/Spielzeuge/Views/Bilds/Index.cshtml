@model IEnumerable<Spielzeuge.Models.Bild>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Spielzeug.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageByte)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Spielzeug.Name)
        </td>
        <td>
            <img src='@Url.Action("Show", "Bilds", new { id = item.BildId })' />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BildId }) |
            @Html.ActionLink("Details", "Details", new { id=item.BildId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BildId })
        </td>
    </tr>
}

</table>
